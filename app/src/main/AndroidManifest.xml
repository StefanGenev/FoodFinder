<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodFinder11"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".activities.ChangeLanguageActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RestaurantStatusesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AdminEditRestaurantActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AdminMainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.OrdersActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SuccessfulOrderActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ChoosePaymentMethodActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ConfirmOrderActivity"
            android:exported="false" />
        <activity
            android:name=".activities.OrderItemActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EditBusinessActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MealInfoActivity"
            android:exported="false" />
        <activity
            android:name=".activities.BusinessInfoActivity"
            android:exported="false" />
        <activity
            android:name=".activities.BusinessMainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RestaurantRegisteredActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ChooseAddressActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ViewChosenPhotoActivity"
            android:exported="false" />
        <activity
            android:name=".activities.FoodTypesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ChooseRoleActivity"
            android:exported="false" />
        <activity
            android:name=".activities.BaseNavigatableActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".activities.MapsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.UploadPhotoActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CongratulationsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EnterNameActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EnterPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EnterEmailActivity"
            android:windowSoftInputMode="adjustResize"
            />
        <activity
            android:name=".activities.NewBusinessDataActivity"
            android:exported="false" />
        <activity
            android:name=".activities.OrderActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ReviewsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RestaurantActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>