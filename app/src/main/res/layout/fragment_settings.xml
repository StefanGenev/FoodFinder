<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:clipChildren="false"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.SettingsFragment">

    <ImageView
        android:id="@+id/pattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/food_pattern_diagonal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pattern2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/food_pattern_diagonal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:clipToPadding="false"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/bentonsans"
            android:text="Settings"
            android:textAlignment="textStart"
            android:textSize="25dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/mealImageCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardCornerRadius="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/menu_image"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/mealtest" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/bentonsans"
            android:text="Restaurant 55"
            android:textAlignment="center"
            android:textSize="@dimen/_20sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:clipToPadding="false"
            android:orientation="vertical">

            <Button
                android:id="@+id/languageButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:drawableRight="@drawable/chevron_right"
                android:elevation="@dimen/_2sdp"
                android:fontFamily="@font/bentonsansmedium"
                android:text="Change language"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="1dp"
                app:strokeWidth="0dp" />

            <Button
                android:id="@+id/aboutUsButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:drawableRight="@drawable/chevron_right"
                android:elevation="@dimen/_2sdp"
                android:fontFamily="@font/bentonsansmedium"
                android:text="About us"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="1dp"
                app:strokeWidth="0dp" />

            <Button
                android:id="@+id/helpButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:drawableRight="@drawable/chevron_right"
                android:elevation="@dimen/_2sdp"
                android:fontFamily="@font/bentonsansmedium"
                android:text="Help and support"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="1dp"
                app:strokeWidth="0dp" />

            <Button
                android:id="@+id/signOutButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:elevation="@dimen/_2sdp"
                android:fontFamily="@font/bentonsansmedium"
                android:text="Log out"
                android:textAlignment="textStart"
                android:textColor="@color/salva"
                android:textSize="18sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="2dp"
                app:strokeWidth="0dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>