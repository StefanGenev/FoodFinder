<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodFinder11" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FoodFinder11" parent="Base.Theme.FoodFinder11">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/light_forest</item>
        <item name="colorOnPrimary">@color/forest</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_lemon</item>
        <item name="colorSecondaryVariant">@color/lemon</item>
        <item name="colorOnSecondary">@color/lemon</item>
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>

        <item name="colorTertiary">@color/light_salva</item>
        <item name="colorOnTertiary">@color/salva</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:textColorHighlight">@color/light_forest</item>

        <item name="android:windowTranslucentStatus">true</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>

        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/_20ssp</item>
        <!-- Set title color -->
        <item name="android:textColor">@color/white</item>
        <!-- Set title font -->
        <item name="android:fontFamily">@font/bentonsans</item>
    </style>

    <style name="Toolbar.Title.Collapsed" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/_20ssp</item>
        <!-- Set title color -->
        <item name="android:textColor">@color/black</item>
        <!-- Set title font -->
        <item name="android:fontFamily">@font/bentonsans</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
        <item name="android:textSize">@dimen/_15sdp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/salva</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/salva</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/salva</item>
        <item name="android:fontFamily">@font/bentonsansmedium</item>
    </style>

    <!-- BottomSheet -->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="MediumTextAppearance" parent="">
        <!-- Set title font -->
        <item name="android:fontFamily">@font/bentonsansmedium</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="CounterTextAppearance" parent="">
        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/_10ssp</item>
        <!-- Set title color -->
        <item name="android:textColor">@color/forest</item>
        <!-- Set title font -->
        <item name="android:fontFamily">@font/bentonsansmedium</item>
    </style>

    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/forest</item>
        <item name="android:colorAccent">@color/light_forest</item>
    </style>

</resources>