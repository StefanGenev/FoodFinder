<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodFinder11" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FoodFinder11" parent="Base.Theme.FoodFinder11">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/forest</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>z
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/_20ssp</item>
        <!-- Set title color -->
        <item name="android:textColor">@color/white</item>
        <!-- Set title font -->
        <item name="android:fontFamily">@font/bentonsans</item>
    </style>

    <style name="Toolbar.Title.Collapsed" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">@dimen/_20ssp</item>
        <!-- Set title color -->
        <item name="android:textColor">@color/white</item>
        <!-- Set title font -->
        <item name="android:fontFamily">@font/bentonsans</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

</resources>